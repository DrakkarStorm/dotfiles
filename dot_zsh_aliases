alias claude="$HOME/.claude/local/claude"

# file
alias rmrf='rm -rf '

# brew
alias bi='HOMEBREW_NO_AUTO_UPDATE=1=1 brew install '

# navigation
alias e=exit
alias ls='ls -lart --color=auto'
alias ll="ls -lart --color=auto"

# edit
alias edit="vim"
alias c='code .'

# zsh configuration edit
alias zshconfig="edit ${HOME}/.zshrc"
alias ohmyzsh="edit ${HOME}/.oh-my-zsh"

# k8s
alias k9s='k9s --readonly'

# tmux
alias tmux-auto='tmux attach || tmux new-session'
alias tmux-main='tmux new-session -A -s main'
alias ta='tmux attach || tmux new-session'

# Aliases functions

tmux-status() {
    local session_count=$(tmux list-sessions 2>/dev/null | wc -l)

    if [[ "${session_count}" -eq 0 ]]; then
        echo "ðŸš€ No tmux sessions. Starting new session..."
        tmux new-session
    elif [[ "${session_count}" -eq 1 ]]; then
        echo "ðŸ“Ž Attaching to the only session..."
        tmux attach
    else
        echo "ðŸ“‹ Multiple sessions available:"
        tmux list-sessions
        echo "\nAttaching to most recent session..."
        tmux attach
    fi
}

function acp() { # acp "my commit"
    git add .
    git commit -m "$1"
    git push
}